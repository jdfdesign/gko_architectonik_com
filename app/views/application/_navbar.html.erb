<%# cache([site, I18n.locale, 'header']) do %>
<!-- Begin Header -->
<header class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to(root_url, :class => "navbar-brand") do %>
        <% image_tag("logo.svg") %>
      <% end %>
      
    </div>
    
    <button class="btn btn-primary btn-menu" type="button" data-toggle="collapse" data-target=".navbar-collapse">
      Menu
    </button>
    <%= render "locales_select" %>
    <nav class="collapse navbar-collapse navbar-right">
      <%= render 'menu', :sections => site.primary_menu, :menu_name => 'navbar-nav' %>
    </nav>
  </div>
</header>
<%# end %>